{
    "name": "cookiefirst/cookiefirst-wp-plugin",
    "description": "CookieFirst WordPress Plugin",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "psr-4": {
            "CookieFirst\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CookieFirst\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "pestphp/pest": "^3.8",
        "brain/monkey": "^2.6"
    }
}
